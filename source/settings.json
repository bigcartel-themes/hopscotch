{
  "name": "Hopscotch",
  "version": "1.5.1",
  "images": [
    {
      "variable": "logo",
      "label": "Logo",
      "description": "Adds your logo to the header"
    },
    {
      "variable": "welcome_image",
      "label": "Welcome image",
      "description": "1200px by 750px images recommended"
    }
  ],
  "image_sets": [
    {
      "variable": "image_gallery",
      "label": "Home Page Gallery",
      "description": "Displays image grid on the Home page"
    }
  ],
  "preset_styles": {
    "preview": {
      "title_font": "primary_font",
      "body_font": "primary_font",
      "text_color": "text_color",
      "background_color": "background_color"
    },
    "presets": [
      {
        "group_name": "Natural",
        "styles": [
          {
            "style_name": "Natural #1",
            "fonts": {
              "primary_font": "Asap"
            },
            "colors": {
              "theme_color": "#EC0400",
              "background_color": "#FFFFFF",
              "accent_background_color": "#F9F7F2",
              "text_color": "#000000",
              "secondary_text_color": "#776633"
            }
          },
          {
            "style_name": "Natural #2",
            "fonts": {
              "primary_font": "Prata"
            },
            "colors": {
              "theme_color": "#8A5A5A",
              "background_color": "#F8F8F8",
              "accent_background_color": "#EBE7E7",
              "text_color": "#0F1B27",
              "secondary_text_color": "#0F1B27"
            }
          },
          {
            "style_name": "Natural #3",
            "fonts": {
              "primary_font": "Cutive Mono"
            },
            "colors": {
              "theme_color": "#9D5C63",
              "background_color": "#FFFDFC",
              "accent_background_color": "#E7EEF9",
              "text_color": "#584B53",
              "secondary_text_color": "#584B53"
            }
          }
        ]
      },
      {
        "group_name": "Classic",
        "styles": [
          {
            "style_name": "Classic #1",
            "fonts": {
              "primary_font": "Sora"
            },
            "colors": {
              "theme_color": "#5900FF",
              "background_color": "#FFFFFF",
              "accent_background_color": "#FFFFFF",
              "text_color": "#0B0423",
              "secondary_text_color": "#0B0423"
            }
          },
          {
            "style_name": "Classic #2",
            "fonts": {
              "primary_font": "Inconsolata"
            },
            "colors": {
              "theme_color": "#AEAEAE",
              "background_color": "#141415",
              "accent_background_color": "#333333",
              "text_color": "#F8F8F8",
              "secondary_text_color": "#F8F8F8"
            }
          },
          {
            "style_name": "Classic #3",
            "fonts": {
              "primary_font": "DM Sans"
            },
            "colors": {
              "theme_color": "#5900FF",
              "background_color": "#FFFFFF",
              "accent_background_color": "#F3F3F5",
              "text_color": "#111111",
              "secondary_text_color": "#111111"
            }
          }
        ]
      }
    ]
  },
  "fonts": [
    {
      "variable": "primary_font",
      "label": "Primary Font",
      "default": "Asap"
    }
  ],
  "colors": [
    {
      "variable": "theme_color",
      "label": "Theme Color",
      "default": "#EC0400"
    },
    {
      "variable": "background_color",
      "label": "Background",
      "default": "#FFFFFF"
    },
    {
      "variable": "accent_background_color",
      "label": "Accent Background",
      "default": "#F9F7F2"
    },
    {
      "variable": "text_color",
      "label": "Primary Text",
      "default": "#000000"
    },
    {
      "variable": "secondary_text_color",
      "label": "Secondary Text",
      "default": "#776633"
    }
  ],
  "options": [
    {
      "variable": "maintenance_message",
      "label": "Maintenance mode message",
      "type": "text",
      "description": "A message visitors see when your shop is in Maintenance Mode",
      "default": "We're working on our shop right now.<br /><br />Please check back soon."
    },
    {
      "variable": "welcome_header",
      "label": "Welcome header",
      "type": "text",
      "description": "Welcome header for homepage"
    },
    {
      "variable": "gallery_title",
      "label": "Image gallery title",
      "type": "text",
      "description": "Title for the Home page image gallery",
      "default": "Gallery"
    },
    {
      "variable": "featured_header",
      "label": "Featured products header",
      "type": "text",
      "description": "Displays above featured products on the Home page",
      "default": "Featured Products"
    },
    {
      "variable": "featured_products",
      "label": "Featured products",
      "type": "select",
      "options": "0..100",
      "default": 12,
      "description": "The number of products shown on the Home page"
    },
    {
      "variable": "featured_order",
      "label": "Featured products order",
      "type": "select",
      "options": "product_orders",
      "default": "position",
      "description": "The order of products on the Home page"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 48,
      "description": "The number of products displayed per page"
    },
    {
      "variable": "nav_items",
      "label": "Navigation items",
      "type": "select",
      "options": "0..6",
      "default": 2,
      "description": "The number of custom page links show in the header navigation."
    },
    {
      "variable": "money_format",
      "label": "Price display",
      "type": "select",
      "options": [
        ["Currency sign", "sign"],
        ["Currency code with sign", "sign_and_code"]
      ],
      "default": "sign",
      "description": "Sets the display of prices in your shop"
    },
    {
      "variable": "product_image_zoom",
      "label": "Enable product image zoom",
      "type": "boolean",
      "default": true,
      "description": "Click to open a larger version of the Product page image"
    },
    {
      "variable": "desktop_product_page_images",
      "label": "Desktop product page images",
      "type": "select",
      "options": [
        ["Thumbnails", "thumbnails"],
        ["Carousel", "carousel"],
        ["Stacked 2 column", "two-column"],
        ["Stacked full width", "stacked"]
      ],
      "default": "carousel",
      "description": "Sets the display of the Product page gallery"
    },
    {
      "variable": "mobile_product_page_images",
      "label": "Mobile product page image carousel",
      "type": "select",
      "options": [
        ["Show thumbnails", "show-thumbnails"],
        ["Hide thumbnails", "hide-thumbnails"]
      ],
      "default": "show-thumbnails",
      "description": "Choose to hide or show thumbnails on the mobile Product page carousel"
    },
    {
      "variable": "show_sold_out_product_options",
      "label": "Show sold out product options",
      "type": "boolean",
      "default": true,
      "description": "Shows sold out product options in the Product page dropdowns",
      "requires": "inventory"
    },
    {
      "variable": "instagram_url",
      "label": "Instagram URL",
      "type": "text",
      "description": "Ex: https://instagram.com/bigcartel"
    },
    {
      "variable": "tiktok_url",
      "label": "TikTok URL",
      "type": "text",
      "description": "Ex: https://tiktok.com/@bigcartelofficial"
    },
    {
      "variable": "twitter_url",
      "label": "Twitter URL",
      "type": "text",
      "description": "Ex: https://twitter.com/bigcartel"
    },
    {
      "variable": "facebook_url",
      "label": "Facebook URL",
      "type": "text",
      "description": "Ex: https://facebook.com/bigcartel"
    },
    {
      "variable": "snapchat_url",
      "label": "Snapchat URL",
      "type": "text",
      "description": "Ex: https://snapchat.com/add/bigcartel"
    },
    {
      "variable": "pinterest_url",
      "label": "Pinterest URL",
      "type": "text",
      "description": "Ex: https://pinterest.com/big_cartel"
    },
    {
      "variable": "youtube_url",
      "label": "YouTube URL",
      "type": "text",
      "description": "Ex: https://youtube.com/@BigCartelDotCom"
    },
    {
      "variable": "tumblr_url",
      "label": "Tumblr URL",
      "type": "text",
      "description": "Ex: https://bigcartel.tumblr.com"
    },
    {
      "variable": "bandcamp_url",
      "label": "Bandcamp URL",
      "type": "text",
      "description": "Ex: https://bigcartel.bandcamp.com"
    }
  ],
  "checkout": {
    "header_image": "{{ logo }}",
    "header_image_max_width": "400px",
    "header_image_max_height": "60px",
    "title_font": "{{ primary_font }}",
    "title_font_weight": "normal",
    "title_font_size": "22px",
    "title_color": "{{ text_color }}",
    "title_background_color": "{{ background_color }}",
    "title_vertical_padding": "27px",
    "background_color": "{{ background_color }}",
    "body_font": "{{ primary_font }}",
    "body_font_size": "14px",
    "step_border_color": "{{ background_color }}",
    "step_header_color": "{{ text_color }}",
    "step_border_width": "4px",
    "step_border_style": "solid",
    "step_border_radius": "0px",
    "step_inactive_header_color": " {{ text_color }}",
    "step_header_font": "{{ primary_font }}",
    "step_background_color": "{{ background_color }}",
    "content_background_color": "{{ accent_background_color }}",
    "content_header_background_color": "{{ accent_background_color }}",
    "content_header_color": "{{ text_color }}",
    "content_color": "{{ text_color }}",
    "content_header_font_size": "18px",
    "content_border_color": "transparent",
    "content_border_radius": "0px",
    "error_background_color": "#9D0B1C",
    "error_color": "#ffffff",
    "error_border_radius": "0px",
    "error_border_color": "#9D0B1C",
    "input_focus_color": "#000000",
    "input_focus_background_color": "#ffffff",
    "input_focus_border_color": "#777777",
    "input_error_border_color": "#9D0B1C",
    "input_color": "#000000",
    "input_error_color": "#000000",
    "input_border_color": "#bfbfbf",
    "input_background_color": "#ffffff",
    "input_error_background_color": "#ffffff",
    "input_border_radius": "0px",
    "input_border_width": "2px",
    "input_font": "{{ primary_font }}",
    "button_border_width": "4px",
    "button_border_radius": "0px",
    "button_font": "{{ primary_font }}",
    "button_color": "{{ text_color }}",
    "button_hover_color": "{{ text_color }}",
    "button_background_color": "{{ background_color }}",
    "button_hover_background_color": "{{ background_color }}",
    "button_border_color": "{{ text_color }}",
    "button_hover_border_color": "{{ text_color }}",
    "button_text_transform": "uppercase",
    "link_color": "{{ theme_color }}",
    "link_hover_color": "{{ text_color }}",
    "step_header_font_size": "18px",
    "summary_color": "{{ text_color }}",
    "summary_secondary_color": "{{ text_color }}",
    "summary_item_border_color": "{{ background_color }}",
    "summary_item_list_border_color": "{{ background_color }}",
    "summary_submit_background_color": "{{ background_color }}",
    "summary_submit_border_color": "{{ background_color }}",
    "summary_submit_border_width": "4px"
  }
}
